@using UserManagement.MVC.Models
@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Zarządzanie użytkownikiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Zarządzenia rolami użytkowników</h2>
            Dodaj/usuń role użytkowników / @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input type="radio" name="selectedRole" value="@Model[i].RoleName" class="form-check-input" />
                    <label class="form-check m-1" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <button type="button" class="btn btn-primary" style="width:auto" onclick="history.back();">Cancel</button>
        </div>
    </div>
</form>
