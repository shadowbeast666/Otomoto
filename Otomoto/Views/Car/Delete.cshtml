@model Otomoto.Models.Car

@{
    ViewData["Title"] = "Usun Ogłoszenie";
}

<h2>Delete Car</h2>

<div class="alert alert-danger">
    <p>Are you sure you want to delete this car?</p>
    <dl class="dl-horizontal">
        <dt>Opis</dt>
        <dd>@Model.Opis</dd>
        <dt>Marka</dt>
        <dd>@Model.Marka</dd>
        <dt>Model</dt>
        <dd>@Model.Model</dd>
        <dt>Typ</dt>
        <dd>@Model.Typ</dd>
        <dt>Pojemność</dt>
        <dd>@Model.Pojemnosc</dd>
        <dt>Skrzynia Biegów</dt>
        <dd>@Model.SkrzyniaBiegow</dd>
        <dt>Rok Produkcji</dt>
        <dd>@Model.RokProdukcji</dd>
        <dt>Cena</dt>
        <dd>@Model.Cena</dd>
        <dt>VIN</dt>
        <dd>@Model.Vin</dd>
        <dt>Przebieg</dt>
        <dd>@Model.Przebieg</dd>
        <dt>Rodzaj Paliwa</dt>
        <dd>@Model.RodzajPaliwa</dd>
    </dl>

    <form asp-controller="Car" asp-action="Delete" method="post">
        <input type="hidden" asp-for="CarId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
